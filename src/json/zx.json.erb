  "title": "zx config",
  "rules": [
    {
      "description": "zx key bindings",
      "manipulators": [
        {
          "description": "remap caps_lock to ctrl",
          "type": "basic",
          "from": <%= from("caps_lock", [], ["any"]) %>,
          "to": <%= to([["left_control"]]) %>
      },
