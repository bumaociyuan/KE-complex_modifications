      {
        "description": "control+d",
        "type": "basic",
        "from": <%= from("d", ["control"], ["caps_lock", "option"]) %>,
        "to": <%= to([["delete_forward"]]) %>,
        "conditions": [ <%= frontmost_application_unless("emacs_key_bindings_exception") %> ]
      },
      {
        "description": "Change control+w to option+delete",
        "type": "basic",
        "from": <%= from("w", ["control"], ["caps_lock"]) %>,
        "to": <%= to([["delete_or_backspace", ["left_option"]]]) %>,
        "conditions": [ <%= frontmost_application_unless("emacs_key_bindings_exception") %> ]
      },
      {
        "description": "Change control+u to delete-to-beginning-of-line",
        "type": "basic",
        "from": <%= from("u", ["control"], ["caps_lock"]) %>,
        "to": <%= to([["delete_or_backspace", ["command"]]]) %>,
        "conditions": [ <%= frontmost_application_unless("emacs_key_bindings_exception") %> ]
      },
      {
        "type": "basic",
        "from": <%= from("h", ["control"], ["caps_lock", "option"]) %>,
        "to": <%= to([["delete_or_backspace"]]) %>,
        "conditions": [ <%= frontmost_application_unless("emacs_key_bindings_exception") %> ]
      },
      {
        "type": "basic",
        "from": <%= from("c", ["control"], ["caps_lock"]) %>,
        "to": <%= to([["escape"]]) %>,
        "conditions": [ <%= frontmost_application_unless("emacs_key_bindings_exception") %> ]
      },
      {
        "type": "basic",
        "from": <%= from("j", ["control"], ["caps_lock", "shift", "option"]) %>,
        "to": <%= to([["return_or_enter"]]) %>,
        "conditions": [ <%= frontmost_application_unless("emacs_key_bindings_exception") %> ]
      },
      {
        "type": "basic",
        "from": <%= from("b", ["control"], ["caps_lock", "shift", "option"]) %>,
        "to": <%= to([["left_arrow"]]) %>,
        "conditions": [ <%= frontmost_application_unless("emacs_key_bindings_exception") %> ]
      },
      {
        "type": "basic",
        "from": <%= from("f", ["control"], ["caps_lock", "shift", "option"]) %>,
        "to": <%= to([["right_arrow"]]) %>,
        "conditions": [ <%= frontmost_application_unless("emacs_key_bindings_exception") %> ]
      },
      {
        "type": "basic",
        "from": <%= from("n", ["control"], ["caps_lock", "shift", "option"]) %>,
        "to": <%= to([["down_arrow"]]) %>,
        "conditions": [ <%= frontmost_application_unless("emacs_key_bindings_exception") %> ]
      },
      {
        "type": "basic",
        "from": <%= from("p", ["control"], ["caps_lock", "shift", "option"]) %>,
        "to": <%= to([["up_arrow"]]) %>,
        "conditions": [ <%= frontmost_application_unless("emacs_key_bindings_exception") %> ]
      },
      {
        "description": "Change command+esc to command+`",
        "type": "basic",
        "from": <%= from("escape", ["command"], []) %>,
        "to": <%= to([["delete_or_backspace", ["command"]]]) %>,
        "to": <%= to([["grave_accent_and_tilde", ["command"]]]) %>
    }
      ]
    }
  ]
}
